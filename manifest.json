{

  "manifest_version": 2,
  "name": "IMDb Streamlist",
  "version": "1.0",

  "description": "See if movies in your IMDb watchlist are available for instant streaming.",

  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*.imdb.com/*/watchlist*"],
      "js": ["main.js"]
    }
  ]

}